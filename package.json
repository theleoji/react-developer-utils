{
  "name": "react-developer-utils",
  "version": "0.0.1",
  "description": "Packaging together of some handy React code that I've been rewriting in my projects",
  "main": "index.js",
  "scripts": {
    "build": "swc src -d lib",
    "pack": "npm run build && npm pack",
    "lint": "eslint .",
    "prepublish": "npm run lint && npm run test && npm run format",
    "publish": "npm run build && npm publish",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write ./src"
  },
  "keywords": [
    "react",
    "developer",
    "utils",
    "testing",
    "debugging"
  ],
  "author": "Leo Ji <leo@leoji.codes>",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@jest/globals": "^29.4.2",
    "@swc/cli": "^0.1.61",
    "@swc/core": "^1.3.34",
    "@types/jest": "^29.4.0",
    "@types/node": "*",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "browserslist": "^4.21.5",
    "eslint": "^8.33.0",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.4.2",
    "jest-environment-jsdom": "^29.4.2",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@testing-library/react": "^13.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
