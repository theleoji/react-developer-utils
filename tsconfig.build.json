{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx"
  ]
}